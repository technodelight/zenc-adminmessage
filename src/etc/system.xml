<?xml version="1.0"?>
<config>
    <tabs>
        <zenc_modules translate="label" module="mx_cmsmenu">
            <label>Zenc Modules</label>
            <sort_order>5000</sort_order>
        </zenc_modules>
    </tabs>
    <sections>
        <zencadminmessage translate="label" module="sodastream_as400">
            <label>Admin Message</label>
            <tab>zenc_modules</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <general translate="label" module="sodastream_as400">
                    <label>General</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <enabled translate="label">
                            <label>Status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>
                        <messages translate="label">
                            <label>Messages</label>
                            <frontend_model>zenc_adminmessage/adminhtml_system_config_form_field_array_message</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </messages>
                    </fields>
                </general>
            </groups>
        </zencadminmessage>
    </sections>
</config>
